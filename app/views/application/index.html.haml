%h2 NextNet Partners Signature Maker
%hr

- if @signature.errors.present?
  .alert

    %span.pull-right
      Having trouble?
      = link_to "Send us feedback!", feedback_url, target: '_blank'

    = @signature.errors.full_messages.to_sentence + '.'

= simple_form_for(@signature, :url => root_path, :method => :get, :html => { :class => 'form-horizontal' }) do |f|

  = f.input :name, :placeholder => 'John Smith'

  = f.input :role, :placeholder => 'Your Title'

  = f.input :company

  = f.input :email, :placeholder => 'john.smith@nextnetpartners.com'

  = f.input :phone, :placeholder => '602-247-8600'
  
  = f.input :mobileNumber, :placeholder => '602-247-8600'


  .form-actions
    = f.button :submit, "Generate"

- if @valid


  %h4 Full-sized
  .row
    .span2
      = link_to 'Download', url_for(:action => 'download', :size => 'full', :signature => params[:signature]), :class => 'btn'
    .span10
      %iframe{:src => url_for(:action => 'preview', :size => 'full', :signature => params[:signature]), :width => '100%', :height => '240'}

